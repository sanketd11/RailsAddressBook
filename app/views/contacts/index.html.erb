<h1>Address Book</h1>
<% @contacts.each do |c|%>
	<div class="container">
		<p>
		  <strong>Name:</strong>
		  <%= c.name %>		
		  <strong>Phone:</strong>
		  <%= c.phone %>
		  <%= link_to "Show", contact_path(c) %>
		  <%= link_to "Edit", edit_contact_path(c) %>
		  <%= link_to "Delete", contact_path(c), method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	</div>
<% end %>
